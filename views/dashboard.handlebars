<section class="section">
    <div class="container">
        <h1 class="title">Welcome to Your Dashboard, {{username}}!</h1>

        <div class="columns">
            <div class="column is-one-quarter">
                <div class="box">
                    <figure class="image is-128x128 mb-4">
                        <img src="https://api.dicebear.com/6.x/adventurer/svg?seed={{username}}" alt="{{username}}'s avatar" class="is-rounded">
                    </figure>
                    <p class="title is-5">{{username}}</p>
                    <p class="subtitle is-6">{{email}}</p>
                    <p>Member since: {{memberSince}}</p>
                </div>
            </div>
            <div class="column">
                <div class="box">
                    <h2 class="title is-4">Your Stats</h2>
                    <p>Total Items: {{totalItems}}</p>
                    <p>Last Login: {{lastLogin}}</p>
                </div>
                <div class="box">
                    <h2 class="title is-4">Your Items</h2>
                    {{#if items}}
                        <ul>
                            {{#each items}}
                                <li>{{this.name}} - {{this.description}}</li>
                            {{/each}}
                        </ul>
                    {{else}}
                        <p>You haven't added any items yet.</p>
                    {{/if}}
                </div>
                <div class="box">
                    <h2 class="title is-4">Actions</h2>
                    <div class="buttons">
                        <a data-target="modal-js" class="button is-primary js-modal-trigger">Add New Item</a>
                    </div>
                </div>
        {{!-- Modal for stock form --}}
                <div id="modal-js" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title"> Add Items </p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      {{!-- // Stock form  --}}
<form id= "stock-form" class="input" action = "api/stock" method="POST">

<label for="add-items"> Add Items: </label>
<div class="control">
  <input class="input" type="text" placeholder="Enter Item" />
</div>

<div class="select">
<label> Select Icon </label>
  <select>
    <option> Icon </option>
    <option> <i class="fa-solid fa-apple-whole"></i> </option>
    <option> <i class="fa-solid fa-carrot"></i> </option>
    <option> <i class="fa-solid fa-pepper-hot"></i> </option>
    <option> <i class="fa-solid fa-fish"></i> </option>
    <option> <i class="fa-solid fa-cheese"></i> </option>
	<option> <i class="fa-solid fa-egg"></i> </option>
	<option> <i class="fa-solid fa-bread-slice"></i> </option>
	<option> <i class="fa-solid fa-bacon"></i> </option>
	<option> <i class="fa-solid fa-pizza-slice"></i> </option>
	<option> <i class="fa-solid fa-seedling"></i> </option>
	<option> <i class="fa-solid fa-cookie"></i> </option>
	<option> <i class="fa-solid fa-bowl-rice"></i> </option>
	<option> <i class="fa-solid fa-bottle-droplet"></i> </option>

</select>
<label for="date"> Expiration Date: </label>
<input type="date" id="datepicker"/>
<script>  $("#datePicker").datePicker({
        
        value: new Date(2024, 0, 3),
        format: "yyyy-MM-dd"
    }); 
    </script>

</input>

 <button class="add-input"> Add More </button>

</div>
<button type="submit">Submit</button>
</form>

    </section>
    <footer class="modal-card-foot">
      <div class="buttons">
        <button class="button is-success">Save changes</button>
        <button class="button">Cancel</button>
      </div>
    </footer>
  </div>
</div>


            </div>
        </div>
    </div>
</section>